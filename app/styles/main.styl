body, h1,h2,h3,h4,h5,h6,p {
  font-family: lato, sans-serif;
}

.bg-faded
  background-color #ffffff !important

img
  max-width 100%

.post
  h1.post-title
    margin 2em 0em 0em
    font-weight 600
    color black

.post-content
  margin 2em 0em
  p
    font-size 1.3em
    line-height 1.6em
    margin-bottom 2em

.featured-image
  margin 3em 0em

.navbar
  margin 2em 0em


// Author
.author-info
  h6.author-label
    font-size 0.9em
  h4.author-name
    font-size 1.4em
    line-height 1em
    margin 0.5em 0em
  p.author-bio
    font-size 0.9em
    line-height 1.4em
